<div class="body">


    {{#if hasMessages}}
    <div class="alert alert-success">{{message}}</div>

    {{/if}}

    {{#if hasError}}
    <div class="alert alert-danger">{{error}}</div>

    {{/if}}

    {{#if hasFolders}}

 <div id="addFolderForm" class="hidden">
        <div class="form-group">
            <form id="addFolder" action="/admin/folders" method="POST">
                <div class="container">
                    <div class="form-group">
                        <label for="username"><b>ID del Cliente</b></label>
                        <input type="text" id="Username" name="username" class="form-control" placeholder="Enter Username" required>
                        </div>
                     <div class="form-group">
                         <label for="name"><b>Nome Pratica</b></label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" required>
                    </div>  
                <div class="form-group">
                    <label for="status"><b>Stato della Pratica</b></label>
                    <input type="text" name="status" class="form-control" placeholder="Enter Status" required>
                </div>
                <div class="form-group">
                    <label for="path"><b>Percorso della cartella (nomeutente/nomepratica)</b></label>
                    <input type="text" name="path" class="form-control" placeholder="es. roberto/RecuperoCrediti/" required>
                </div>  
                <div class="clearfix">
                    <button type="submit" class="btn btn-primary">Crea Pratica</button>
                </div>
            </div>
        </form>
    </div>
</div>

<button id="addFolderButton" class="btn btn-primary">Aggiungi Pratica</button>    
<table class="table table-striped">
    <tr>
        <th>Utente</th>
        <th>Nome pratica</th>
        <th>Status</th>
        <th>Contenuto</th>
        <th>Azioni</th>
    </tr>
    {{#each folders}}
    <tr>
        <td>{{this.clientId.username}}</td>
        <td>{{this.name}}</td>
        <td>{{this.status}}</td>
        <td><a href="/admin/folders/{{this._id}}">Pi√π dettagli</a></td>
        <td><a href="/admin/folders/{{this._id}}/delete"><i class="fa fa-trash"></i></a></td>
    </tr>
    {{/each}}
</table>
{{else}}
<p>Non ci sono pratiche affidate allo studio.</p>
{{/if}}

    
</div>


{{#if foldersListing}}
<script src="/javascripts/admin/addFolders.js"></script>
{{/if}}